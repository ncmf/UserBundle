{% extends "@NCMFUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="text-center">
        {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'form-signin' } }) }}
        <i class="fas fa-key fa-5x mb-4"></i>
        <h1 class="h3 mb-3 font-weight-normal">Установка нового пароля</h1>

        {% for passwordField in form.plainPassword %}
            <div class="form-group">
                {{ form_label(passwordField) }}
                {{ form_widget(passwordField, { 'attr': {'class': 'form-control'} }) }}
            </div>
        {% endfor %}

        <button class="btn btn-lg btn-primary btn-block" type="submit"
                name="_submit">{{ 'resetting.reset.submit'|trans }}</button>

        {{ form_end(form) }}
    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% include "@NCMFUser/Security/styles.html.twig" %}
{% endblock %}
